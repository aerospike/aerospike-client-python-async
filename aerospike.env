# Use services-alternate addresses when connecting to containerized servers (Docker, K8s)
# Set to "true" when client runs outside the container network
export AEROSPIKE_USE_SERVICES_ALTERNATE=true

# Regular Aerospike server - basic data operations, no security or TLS
export AEROSPIKE_HOST=localhost:3100

# Security-enabled Aerospike server - user/role management, authentication, privileges
export AEROSPIKE_HOST_SEC=localhost:3101

# TLS-enabled Aerospike server - encrypted connections, basic data operations
# Must match server tls-name for cert validation (e.g. host:tls_name:port)
export AEROSPIKE_HOST_TLS=localhost:3103
export AEROSPIKE_TLS_NAME=tls1
export AEROSPIKE_TLS_CA_FILE=/Users/pbrackin/tools/aerolab/CA/cacert.pem
export AEROSPIKE_TLS_CLIENT_CERT_FILE=/Users/pbrackin/tools/aerolab/CA/cert.pem
export AEROSPIKE_TLS_CLIENT_KEY_FILE=/Users/pbrackin/tools/aerolab/CA/key.pem

# Output directory for generated Python type stubs
# Should be set to 'python' - stub_gen.rs will move _aerospike_async_native.pyi to the correct package location
export STUB_OUTPUT_DIR=python
